{
  "name": "simple-workflow-builder",
  "version": "0.1.0",
  "description": "Simplified workflow automation tool inspired by n8n",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint src --ext .ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "axios": "^1.12.0",
    "better-sqlite3": "^11.0.0",
    "uuid": "^10.0.0",
    "lodash": "^4.17.21",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.17.50",
    "@types/uuid": "^10.0.0",
    "@types/lodash": "^4.17.0",
    "@types/cors": "^2.8.17",
    "typescript": "^5.6.0",
    "tsx": "^4.19.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0"
  },
  "keywords": [
    "workflow",
    "automation",
    "n8n",
    "workflow-builder"
  ]
}